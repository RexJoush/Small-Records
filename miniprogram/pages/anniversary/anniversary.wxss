page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 200rpx;
  height: 100%;
}

/* 纪念日 */
.anniversary {
  /* border: 1px solid white; */
  border-radius: 30rpx;
  font-size: 30rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  min-height: 300rpx;
}

/* 提示信息 */
.hint {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 auto;
  width: 100%;
  height: 60%;
  color: #ffffff;
  
}

.hint text {
  /* background-color: #918e8e; */
  opacity: 0.5;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

