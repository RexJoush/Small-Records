<!--index.wxml-->


<!-- 通知栏 -->
<van-row>
  <van-notice-bar
    left-icon="volume-o"
    background="#70AF9E"
    color="white"
    custom-class="notice"
    url="/pages/notice/notice"
    text="{{notice}}"
  />

</van-row>

<!-- 导航栏 -->
<!-- 我的小记录 -->
<van-row>
    <van-col span="22" offset="1">
      <van-cell
        custom-class="nav1"
        icon="label-o"
        title="我的小记录"
        is-link
        link-type="navigateTo"
        size="large"
        bind:click="gotoRecord"
        center 
      />
      <!-- <van-cell title="单元格">
        <van-icon slot="right-icon" name="search" class="custom-icon" />
      </van-cell> -->
    </van-col>
</van-row>

<!-- 我的纪念日 -->
<van-row>
    <van-col span="22" offset="1">
      <van-cell
        custom-class="nav2"
        icon="point-gift-o"
        title="我的纪念日"
        is-link
        link-type="navigateTo"
        size="large"
        bind:click="gotoAnniversary"
        center 
      />
      <!-- <van-cell title="单元格">
        <van-icon slot="right-icon" name="search" class="custom-icon" />
      </van-cell> -->
    </van-col>
</van-row>



